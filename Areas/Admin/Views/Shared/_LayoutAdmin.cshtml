<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>  @* Updated title *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            @* Dark navbar for admin *@
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">
                    @* Link to Admin Home *@
                    <img src="~/images/logo.png" alt="Logo" class="navbar-logo">  @* Or a different admin logo *@
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">Dashboard</a> @* Example admin link *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a> @* Example admin link *@
                        </li>
                        @* Add more admin navigation links here *@
                    </ul>

                    @* Logout button in the navbar *@
                    @if (User.Identity.IsAuthenticated)
                    {
                    <form asp-area="Admin" asp-controller="AdminAccount" asp-action="Logout" method="post" class="d-flex">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        @* Dark footer *@
        <div class="container text-light">
            @* Light text for footer *@
            &copy; 2025 - Stationery Admin Panel - <a asp-area="Admin" asp-controller="AdminHome" asp-action="Privacy" class="text-light">Privacy</a> @* Admin privacy link *@
        </div>
    </footer>


    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>