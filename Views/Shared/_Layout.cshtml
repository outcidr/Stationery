<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Pen & Paper</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index">
					<img src="~/images/logo.png" alt="Logo" class="navbar-logo">
				</a>
				<div class="d-flex align-items-center">
					@if (Context.Session.GetInt32("UserId") != null)
					{
						@if (Context.Session.GetString("UserRole") == "Admin")
						{
							<span class="me-3 text-success">Ви увійшли як адміністратор.</span>
						}
						<div class="dropdown">
							<button class="btn btn-link text-dark dropdown-toggle" type="button"
																	   id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="bi bi-person-circle me-2"></i>@Context.Session.GetString("Username")
							</button>
							<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
								<li>
									<a class="dropdown-item" asp-controller="Users" asp-action="Profile">
										<i class="bi bi-person me-2"></i>Profile
									</a>
								</li>
								<li>
									<a class="dropdown-item" asp-controller="Orders" asp-action="Index">
										<i class="bi bi-bag me-2"></i>Orders
									</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<form asp-controller="Account" asp-action="Logout" method="post">
										<button type="submit" class="dropdown-item text-danger">
											<i class="bi bi-box-arrow-right me-2"></i>Logout
										</button>
									</form>
								</li>
							</ul>
						</div>
					}
					else
					{
						<a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">
							<i class="bi bi-box-arrow-in-right me-2"></i>Увійти
						</a>
						<a class="btn btn-primary me-2" asp-controller="Account" asp-action="Register">
							<i class="bi bi-person-plus me-2"></i>Зареєструватися
						</a>
						<a class="btn btn-secondary" asp-controller="Account" asp-action="AdminRegister">
							@* Adjust style as needed *@
							<i class="bi bi-person-fill-gear me-2"></i>Admin Register
						</a>
					}
				</div>
			</div>
		</nav>
	</header>

	<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
		<div class="offcanvas-header">
			<h5 class="offcanvas-title" id="sidebarLabel">Категорії</h5>
			<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
			@await Component.InvokeAsync("CategorySidebar")
		</div>
	</div>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - Stationery - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>